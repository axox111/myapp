<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Case">

    <TextView
        android:id="@+id/caseText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/case_description"
        android:textSize="20sp"></TextView>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/letter_1"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/border"
            android:textAlignment="center"
            android:textSize="20dp"
            android:maxLength="1"
            android:textIsSelectable="false"></EditText>

        <EditText
            android:id="@+id/letter_2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/letter_1"
            android:background="@drawable/border"
            android:textAlignment="center"
            android:textSize="20dp"
            android:maxLength="1"
            android:nextFocusLeft="@+id/letter_1"
            android:textIsSelectable="false"></EditText>

        <EditText
            android:id="@+id/letter_3"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/letter_2"
            android:background="@drawable/border"
            android:textAlignment="center"
            android:textSize="20dp"
            android:maxLength="1"
            android:textIsSelectable="false"></EditText>

        <EditText
            android:id="@+id/letter_4"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/letter_3"
            android:background="@drawable/border"
            android:textAlignment="center"
            android:textSize="20dp"
            android:maxLength="1"
            android:textIsSelectable="false"></EditText>

        <EditText
            android:id="@+id/letter_5"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/letter_4"
            android:background="@drawable/border"
            android:textAlignment="center"
            android:textSize="20dp"
            android:maxLength="1"
            android:textIsSelectable="false"></EditText>

        <EditText
            android:id="@+id/letter_6"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/letter_5"
            android:background="@drawable/border"
            android:textAlignment="center"
            android:textSize="20dp"
            android:maxLength="1"
            android:textIsSelectable="false"></EditText>

        <EditText
            android:id="@+id/letter_7"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/letter_6"
            android:background="@drawable/border"
            android:textAlignment="center"
            android:textSize="20dp"
            android:maxLength="1"
            android:textIsSelectable="false"></EditText>

        <EditText
            android:id="@+id/letter_8"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/letter_7"
            android:background="@drawable/border"
            android:textAlignment="center"
            android:textSize="20dp"
            android:maxLength="1"
            android:textIsSelectable="false"></EditText>

        <EditText
            android:id="@+id/letter_9"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/letter_8"
            android:background="@drawable/border"
            android:textAlignment="center"
            android:textSize="20dp"
            android:maxLength="1"
            android:textIsSelectable="false"></EditText>

        <EditText
            android:id="@+id/letter_10"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/letter_9"
            android:background="@drawable/border"
            android:textAlignment="center"
            android:textSize="20dp"
            android:maxLength="1"
            android:textIsSelectable="false"></EditText>

        <EditText
            android:id="@+id/letter_11"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/letter_10"
            android:background="@drawable/border"
            android:textAlignment="center"
            android:textSize="20dp"
            android:maxLength="1"
            android:textIsSelectable="false"></EditText>

        <EditText
            android:id="@+id/letter_12"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/letter_11"
            android:background="@drawable/border"
            android:textAlignment="center"
            android:textSize="20dp"
            android:maxLength="1"
            android:textIsSelectable="false"></EditText>
    </android.support.v7.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/tryAgain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/case_keyboard"
        android:gravity="center"
        android:layout_centerInParent="true"/>

    <com.example.javaapp.MyKeyboard
        android:id="@+id/case_keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"></com.example.javaapp.MyKeyboard>
</RelativeLayout>